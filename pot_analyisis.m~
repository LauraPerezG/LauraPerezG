% Potential analysis for Nexp

% Initialization of the workspace
clear;

close all;

addpath pot

% Load data file

load('Data_positions_Fig9_1P4_S.mat');

%Vx=Vx*Sdx;

kb=1.38064852e-23;
P=100; %number of bins of the histogram, if not set default is 50
subs=1; %use a subsampled data set

%linear fit
[k_potlf, Ek_potlf, x_alpha_nlf, mrholf, delta_rholf, mUlf, EUlf, rho0lf, x_eqlf]=pot_lfit(x(1:subs:size(x,1),:),T,P);

%non-linear fit
[k_potnnl, Ek_potmnl, x_alpha_nf, mrho_nl, delta_rho_nl, mU_nl, EU_nl, rho0nl, x_eqnl]=pot_nlfit(x(1:subs:size(x,1),:),T,P);

